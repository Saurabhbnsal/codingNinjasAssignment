<div class="login">
<div class="login-container">
  <h1>Login</h1>

  <%= form_with model: @user do |form| %>
  <div class="doubt-form-div">
  <div class="username">
      <%= form.label :username %><br>
      <%= form.text_field :username %>
    </div>
    <div class="password">
    <%= form.label :password %><br>
    <%= form.text_field :password %>
  </div>
  <div class="button">
    <%= form.submit %>
  </div>
  </div>
    
  <% end %>
  </div>
</div>